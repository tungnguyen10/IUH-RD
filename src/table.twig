{% extends "./_templates/layout.twig" %}
{# If rename this file, rename in gulp
'html' task as well #}
{% set breadcrumbs = [ { title: 'Bảng giá', url:
'/table' } ] %}
{% set pageClass = 'iuhTable' %}
{% block page %}
	<div class="w-full py-4 pb-6 lg:pt-0 lg:pb-16 relative">
		<div class="w-full max-w-[1200px] px-4 mx-auto">
			<div class="bg-white rounded-xl border border-gray-200 shadow-md p-6 sm:p-8">
				<h2 class="text-xl sm:text-2xl font-semibold text-navyBlue-800 mb-6">
					Bảng giá
				</h2>
				<div class="overflow-x-auto">
					<table class="w-full min-w-[750px] bg-white border border-gray-200 rounded-lg overflow-hidden text-sm md:text-base">
						<thead>
							<tr class="bg-navyBlue-50 text-navyBlue-800">
								<th class="px-4 py-3 border-b font-semibold text-center align-middle whitespace-nowrap">STT</th>
								<th class="px-4 py-3 border-b font-semibold text-center align-middle whitespace-nowrap">Tên sản phẩm</th>
								<th class="px-4 py-3 border-b font-semibold text-center align-middle whitespace-nowrap">Mô tả</th>
								<th class="px-4 py-3 border-b font-semibold text-center align-middle whitespace-nowrap">Hình ảnh</th>
								<th class="px-4 py-3 border-b font-semibold text-center align-middle whitespace-nowrap">Liên hệ</th>
							</tr>
						</thead>
						<tbody>
							{% for i in 1..5 %}
								<tr class="hover:bg-navyBlue-50 transition-colors">
									<td class="px-4 py-3 border-b align-middle text-center">{{ i }}</td>
									<td class="px-4 py-3 border-b align-middle text-center font-medium">Sản phẩm {{ i }}</td>
									<td class="px-4 py-3 border-b align-middle text-center">Mô tả ngắn về sản phẩm {{ i }}. Lorem ipsum dolor sit amet, consectetur adipiscing elit.</td>
                    <td class="px-4 py-3 border-b align-middle text-center">
										<img src="assets/images/default.png" alt="Sản phẩm {{ i }}" class="w-16 h-16 object-cover rounded shadow border border-gray-100 mx-auto"/>
									</td>
									<td class="px-4 py-3 border-b align-middle text-center whitespace-nowrap min-w-[110px]">
										<p class="bg-navyBlue-600 cursor-pointer flex justify-center items-center px-4 py-2 text-white font-semibold rounded-lg text-xs md:text-sm shadow transition-all duration-200 hover:scale-105 hover:shadow-lg active:scale-95 focus:outline-none focus:ring-2 focus:ring-navyBlue-400 animate-none hover:animate-pulse whitespace-nowrap min-w-[110px] contact-btn">
											Liên hệ
										</p>
									</td>
									
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	{% endblock %}
