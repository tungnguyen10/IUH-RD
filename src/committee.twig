{% extends "./_templates/layout.twig" %}
{% set breadcrumbs = [ { title: 'Đảng ủy', url: '/committee' } ] %}
{% set pageClass = 'iuhCommittee' %}
{% block page %}
<div class="w-full py-4 pb-8 lg:pt-0 lg:pb-16 relative">
  <div class="w-full max-w-[1200px] px-4 mx-auto">
    <!-- Page Header -->
    {% include "./_components/page-header.twig" with {
    title: 'ĐẢNG UỶ TRƯỜNG ĐẠI HỌC CÔNG NGHIỆP TP.HCM'
    } %}

    <div class="flex flex-row gap-4 mt-12 sm:mt-16">
      <div class="w-3/12 flex-col gap-8 hidden xl:flex">
          <!-- Organizational structure -->
          {% include './_templates/components/_MenuBar.twig' %}
        <div class="flex flex-col gap-6">
          <h3 class="text-xl font-bold text-navyBlue-800 flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9.5a2.5 2.5 0 00-2.5-2.5H15" />
            </svg>
            Tin tức mới nhất
          </h3>

          <div class="flex flex-col gap-4 flex-1">
            {% set recentNews = [
            {
            title: "Hội nghị tổng kết công tác Đảng năm 2023",
            date: "28/02/2024",
            image: "assets/images/biotech4.jpg",
            excerpt: "Đánh giá kết quả thực hiện nhiệm vụ công tác xây dựng Đảng năm 2023..."
            },
            {
            title: "Lễ kết nạp đảng viên mới tháng 2/2024",
            date: "15/02/2024",
            image: "assets/images/biotech4.jpg",
            excerpt: "Chi bộ tổ chức lễ kết nạp cho 15 quần chúng ưu tú..."
            }
            ] %}

            {% for item in recentNews %}
            <a href="#" class="group block bg-white rounded-xl shadow-sm hover:shadow-md transition-all duration-300">
              <div class="flex gap-3 p-3">
                <!-- Thumbnail -->
                <div class="w-20 h-20 shrink-0 rounded-lg overflow-hidden">
                  <img src="{{ item.image }}" alt="{{ item.title }}"
                    class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110">
                </div>

                <!-- Content -->
                <div class="flex-1 min-w-0">
                  <div class="flex items-center gap-2 text-xs text-gray-500 mb-1">
                    <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                    {{ item.date }}
                  </div>
                  <h4
                    class="font-medium text-navyBlue-800 line-clamp-2 group-hover:text-navyBlue-600 transition-colors">
                    {{ item.title }}
                  </h4>
                  <p class="text-sm text-gray-600 line-clamp-2 mt-1">
                    {{ item.excerpt }}
                  </p>
                </div>
              </div>
            </a>
            {% endfor %}

            <!-- View All Link -->
            <a href="#" class="block text-center py-2 text-sm font-medium text-navyBlue-600 hover:text-navyBlue-800 transition-colors">
              Xem tất cả tin tức
              <svg class="w-4 h-4 inline-block ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor"></svg>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3">

            </path></a>
          </div>
        </div>

        <div class="flex flex-col gap-8 flex-1">


          <!-- Banner Section -->
          <div class="rounded-xl overflow-hidden shadow-lg">
            <div class="relative aspect-[16/9]">
              <img src="assets/images/slide2mb.png" alt="IUH Banner" class="w-full h-full object-cover">
              <div class="absolute inset-0 bg-gradient-to-t from-navyBlue-900/90 to-transparent">
                <div class="absolute bottom-0 left-0 right-0 p-4">
                  <h3 class="text-lg font-bold text-white">Các Phân hiệu và Cơ sở</h3>
                  <p class="text-sm text-white/80">Hệ thống cơ sở đào tạo của IUH</p>
                </div>
              </div>
            </div>
          </div>

          <!-- Branch Cards -->
          <div class="space-y-4">
            <!-- Branch 1 -->
            {% for i in 1..3 %}
            <div
              class="group bg-white rounded-lg shadow-lg overflow-hidden border border-stroke hover:shadow-xl transition-all duration-500">
              <a href="#" class="flex items-center gap-3 p-3">
                <div class="w-16 h-16 shrink-0 rounded-lg overflow-hidden">
                  <img src="assets/images/slide2mb.png" alt="Phân hiệu Quảng Ngãi"
                    class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110">
                </div>
                <div class="flex-1 min-w-0">
                  <h4 class="font-medium text-navyBlue-800 truncate group-hover:text-navyBlue-600 transition-colors">
                    Phân hiệu Quảng Ngãi
                  </h4>
                  <p class="text-sm text-gray-600 line-clamp-2">
                    Số 938 Quang Trung, TP. Quảng Ngãi
                  </p>
                </div>
                <svg class="w-5 h-5 text-navyBlue-600 shrink-0 transform transition-transform group-hover:translate-x-1"
                  fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </a>
            </div>
            {% endfor %}
            <!-- View All Button -->
            <a href="#"
              class="block text-center py-2 text-sm font-medium text-navyBlue-600 hover:text-navyBlue-800 transition-colors">
              Xem tất cả cơ sở
              <svg class="w-4 h-4 inline-block ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor"></svg>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </a>
          </div>

        </div>

      </div>

      <div class="w-full lg:w-9/12 flex flex-col gap-8 sm:gap-12 flex-1">
        <!-- Level 1: Secretary -->
        <div class="flex flex-col items-center">
          <div class="relative max-w-2xl mx-auto w-full">
            <!-- Hexagon Container -->
            <div class="group relative flex gap-8 items-center">
              <!-- Hexagon Shape with Rounded Corners -->
              <div class="relative w-[200px] aspect-[400/460]">

                <!-- Image Container with Rounded Corners -->
                <div class="absolute inset-2 overflow-hidden">
                  <div class="w-full h-full transform -skew-y-[10deg] overflow-hidden rounded-[2rem]">
                    <div class="w-full h-full transform skew-y-[10deg] overflow-hidden">
                      <img src="assets/images/thayhai.png" alt="Bí thư"
                        class="w-full h-full object-cover object-center transition-transform duration-700 group-hover:scale-110">

                    </div>
                  </div>
                </div>
                <!-- Decorative Elements -->
                <div class="absolute -top-3 -left-3 size-6 bg-navyBlue-600 rounded-full shadow-lg blur-[1px]"></div>
                <div class="absolute -bottom-3 -right-3 size-6 bg-navyBlue-600 rounded-full shadow-lg blur-[1px]"></div>
                <div class="absolute top-1/2 -right-3 size-4 bg-navyBlue-400 rounded-full shadow-md"></div>
                <div class="absolute top-1/2 -left-3 size-4 bg-navyBlue-400 rounded-full shadow-md"></div>
                <!-- Additional Decorative Lines -->
                <div
                  class="absolute top-0 left-8 w-20 h-1 bg-gradient-to-r from-navyBlue-400/50 to-transparent rounded-full">
                </div>
                <div
                  class="absolute bottom-0 right-8 w-20 h-1 bg-gradient-to-l from-navyBlue-400/50 to-transparent rounded-full">
                </div>
              </div>
              <!-- Content Overlay -->
              <div class="flex flex-col gap-4 items-center">
                <div class="flex items-center gap-2 rounded-full text-sm text-black1 font-medium">
                  <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                  </svg>
                  Bí thư Đảng ủy
                </div>
                <h3 class="text-xl font-bold text-black1">PGS.TS Phan Hồng Hải</h3>
                <p class="text-sm text-black1">Hiệu trưởng Trường Đại học Công nghiệp TP.HCM</p>

              </div>

            </div>
          </div>
        </div>
        <!-- Ornate Connector -->
        <div class="flex flex-col items-center">
          <div class="w-0.5 h-16 bg-gradient-to-b from-navyBlue-200 to-navyBlue-400"></div>
          <div class="w-3 h-3 rotate-45 bg-navyBlue-500 transform -translate-y-1.5"></div>
        </div>

        <!-- Level 2: Deputy Secretaries -->
        <div class="grid grid-cols-2 sm:grid-cols-2 justify-between gap-8 max-w-4xl mx-auto w-full">
          {% set deputySecretaries = [
          { name: 'PGS.TS Hoàng Đơ', role: 'Phó Bí thư', position: 'Phó Hiệu trưởng' },
          { name: 'TS. Phạm Trung Kiên', role: 'Phó Bí thư', position: 'Phó Hiệu trưởng' }
          ] %}
          {% for member in deputySecretaries %}
          <!-- Hexagon Container -->
          <div class="group relative flex flex-col gap-4 items-center">
            <!-- Hexagon Shape with Rounded Corners -->
            <div class="relative w-[150px] aspect-[400/460]">
              <!-- Image Container with Rounded Corners -->
              <div class="absolute inset-2 overflow-hidden">
                <div class="w-full h-full transform -skew-y-[10deg] overflow-hidden rounded-[2rem]">
                  <div class="w-full h-full transform skew-y-[10deg] overflow-hidden">
                    <img src="assets/images/thayhai.png" alt="{{ member.name }}"
                      class="w-full h-full object-cover object-center transition-transform duration-700 group-hover:scale-110">

                  </div>
                </div>
              </div>
              <!-- Decorative Elements -->
              <div class="absolute -top-3 -left-3 size-6 bg-navyBlue-600 rounded-full shadow-lg blur-[1px]"></div>
              <div class="absolute -bottom-3 -right-3 size-6 bg-navyBlue-600 rounded-full shadow-lg blur-[1px]"></div>
              <div class="absolute top-1/2 -right-3 size-4 bg-navyBlue-400 rounded-full shadow-md"></div>
              <div class="absolute top-1/2 -left-3 size-4 bg-navyBlue-400 rounded-full shadow-md"></div>
              <!-- Additional Decorative Lines -->
              <div
                class="absolute top-0 left-8 w-20 h-1 bg-gradient-to-r from-navyBlue-400/50 to-transparent rounded-full">
              </div>
              <div
                class="absolute bottom-0 right-8 w-20 h-1 bg-gradient-to-l from-navyBlue-400/50 to-transparent rounded-full">
              </div>
            </div>
            <!-- Content Overlay -->
            <div class="flex flex-col gap-1 items-center">
              <div class="flex items-center gap-2 rounded-full text-sm text-black1 font-medium">
                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                </svg>
                {{ member.role }}
              </div>
              <h3 class="text-base font-bold text-black1">{{ member.name }}</h3>
              <p class="text-sm text-black1">{{ member.position }}</p>
            </div>

          </div>
          {% endfor %}
        </div>

        <!-- Ornate Connector -->
        <div class="flex flex-col items-center">
          <div class="w-0.5 h-16 bg-gradient-to-b from-navyBlue-200 to-navyBlue-400"></div>
          <div class="w-3 h-3 rotate-45 bg-navyBlue-500 transform -translate-y-1.5"></div>
        </div>

        <!-- Level 3: Standing Committee -->
        <div class="grid grid-cols-2 sm:grid-cols-2 justify-between gap-8 max-w-4xl mx-auto w-full">
          {% set standingMembers = [
          { name: 'TS. Nguyễn Xuân Hồng', role: 'Ủy viên Thường vụ', position: 'Trưởng phòng Đào tạo' },
          { name: 'ThS. Huỳnh Trung Hiếu', role: 'Ủy viên Thường vụ', position: 'Trưởng phòng TCHC' }
          ] %}
          {% for member in standingMembers %}
          <div class="group relative flex flex-col gap-4 items-center">
            <!-- Hexagon Shape with Rounded Corners -->
            <div class="relative w-[150px] aspect-[400/460]">
              <!-- Image Container with Rounded Corners -->
              <div class="absolute inset-2 overflow-hidden">
                <div class="w-full h-full transform -skew-y-[10deg] overflow-hidden rounded-[2rem]">
                  <div class="w-full h-full transform skew-y-[10deg] overflow-hidden">
                    <img src="assets/images/thayhai.png" alt="{{ member.name }}"
                      class="w-full h-full object-cover object-center transition-transform duration-700 group-hover:scale-110">

                  </div>
                </div>
              </div>
              <!-- Decorative Elements -->
              <div class="absolute -top-3 -left-3 size-6 bg-navyBlue-600 rounded-full shadow-lg blur-[1px]"></div>
              <div class="absolute -bottom-3 -right-3 size-6 bg-navyBlue-600 rounded-full shadow-lg blur-[1px]"></div>
              <div class="absolute top-1/2 -right-3 size-4 bg-navyBlue-400 rounded-full shadow-md"></div>
              <div class="absolute top-1/2 -left-3 size-4 bg-navyBlue-400 rounded-full shadow-md"></div>
              <!-- Additional Decorative Lines -->
              <div
                class="absolute top-0 left-8 w-20 h-1 bg-gradient-to-r from-navyBlue-400/50 to-transparent rounded-full">
              </div>
              <div
                class="absolute bottom-0 right-8 w-20 h-1 bg-gradient-to-l from-navyBlue-400/50 to-transparent rounded-full">
              </div>
            </div>
            <!-- Content Overlay -->
            <div class="flex flex-col gap-1 items-center">
              <div class="flex items-center gap-2 rounded-full text-sm text-black1 font-medium">
                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                </svg>
                {{ member.role }}
              </div>
              <h3 class="text-base font-bold text-black1">{{ member.name }}</h3>
              <p class="text-sm text-black1">{{ member.position }}</p>
            </div>

          </div>
          {% endfor %}
        </div>

        <!-- Ornate Connector -->
        <div class="flex flex-col items-center">
          <div class="w-0.5 h-16 bg-gradient-to-b from-navyBlue-200 to-navyBlue-400"></div>
          <div class="w-3 h-3 rotate-45 bg-navyBlue-500 transform -translate-y-1.5"></div>
        </div>

        <!-- Level 4: Committee Members -->
        <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-3 gap-8">
          {% set committeeMembers = [
          { name: 'ThS. Đàm Sao Mai', position: 'Trưởng khoa', role: 'Ủy viên ban chấp hành' },
          { name: 'TS. Nguyễn Thị Thương', position: 'Phó Trưởng khoa',role: 'Ủy viên ban chấp hành' },
          { name: 'ThS. Phạm Thị Quế Minh', position: 'Trưởng phòng',role: 'Ủy viên ban chấp hành' },
          { name: 'PGS.TS Nguyễn Trung Dũng', position: 'Trưởng khoa',role: 'Ủy viên ban chấp hành' },
          { name: 'TS. Phạm Thanh Tùng', position: 'Phó Trưởng khoa',role: 'Ủy viên ban chấp hành' },
          { name: 'ThS. Lê Ngọc Sơn', position: 'Trưởng phòng',role: 'Ủy viên ban chấp hành' },
          { name: 'TS. Nguyễn Huy Phúc', position: 'Trưởng khoa',role: 'Ủy viên ban chấp hành' },
          { name: 'ThS. Nguyễn Trường Thi', position: 'Phó Trưởng phòng',role: 'Ủy viên ban chấp hành' }
          ] %}

          {% for member in committeeMembers %}
          <div class="group relative flex flex-col gap-4 items-center">
            <!-- Hexagon Shape with Rounded Corners -->
            <div class="relative w-[150px] aspect-[400/460]">

              <!-- Image Container with Rounded Corners -->
              <div class="absolute inset-2 overflow-hidden">
                <div class="w-full h-full transform -skew-y-[10deg] overflow-hidden rounded-[2rem]">
                  <div class="w-full h-full transform skew-y-[10deg] overflow-hidden">
                    <img src="assets/images/thayhai.png" alt="{{ member.name }}"
                      class="w-full h-full object-cover object-center transition-transform duration-700 group-hover:scale-110">

                  </div>
                </div>
              </div>
              <!-- Decorative Elements -->
              <div class="absolute -top-3 -left-3 size-6 bg-navyBlue-600 rounded-full shadow-lg blur-[1px]"></div>
              <div class="absolute -bottom-3 -right-3 size-6 bg-navyBlue-600 rounded-full shadow-lg blur-[1px]"></div>
              <div class="absolute top-1/2 -right-3 size-4 bg-navyBlue-400 rounded-full shadow-md"></div>
              <div class="absolute top-1/2 -left-3 size-4 bg-navyBlue-400 rounded-full shadow-md"></div>
              <!-- Additional Decorative Lines -->
              <div
                class="absolute top-0 left-8 w-20 h-1 bg-gradient-to-r from-navyBlue-400/50 to-transparent rounded-full">
              </div>
              <div
                class="absolute bottom-0 right-8 w-20 h-1 bg-gradient-to-l from-navyBlue-400/50 to-transparent rounded-full">
              </div>
            </div>
            <!-- Content Overlay -->
            <div class="flex flex-col gap-1 items-center text-center">
              <div class="flex items-center gap-2 rounded-full text-sm text-black1 font-medium">
                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                </svg>
                {{ member.role }}
              </div>
              <h3 class="text-base font-bold text-black1">{{ member.name }}</h3>
              <p class="text-sm text-black1">{{ member.position }}</p>

            </div>

          </div>
          {% endfor %}
        </div>

      </div>

    </div>
    <!-- Organization Tree -->

  </div>
</div>
{% endblock %}
