              ] %}
						{% for item in featuredNews %}
							<div class="group bg-white rounded-lg shadow-sm hover:shadow-md transition-all duration-300 border border-gray-100">
								<a href="#" class="flex gap-3 p-3">
									<div
										class="flex flex-col w-1/3 aspect-[4/3] items-center justify-center shrink-0 border-r border-gray-100">
										<!-- <span class="text-lg font-bold text-navyBlue-800">{{ item.date|slice(0, 2) }}</span>
																																																		                        <span class="text-xs text-gray-500">Th{{ item.date|slice(3, 2) }}</span> -->
										<img src="{{ item.img }}" alt="{{ item.title }}" class="size-full object-cover"/>
									</div>
									<div class="flex-1 min-w-0">
										<div class="flex items-center gap-2 mb-1">
											{% if item.type %}
												<span class="px-2 py-1 rounded-full text-xs text-white {{
																																																																	                            item.typeColor
																																																																	                          }}">{{ item.type }}</span>
											{% endif %}
											<span class="text-xs text-gray-500">{{ item.date }}</span>
											<span class="text-xs text-gray-400">&bull; by
												{{ item.author }}</span>
										</div>
										<h4 class="font-medium text-black1 line-clamp-2 group-hover:text-navyBlue-600 transition-colors">
											{{ item.title }}
										</h4>
									</div>
								</a>
							</div>
						{% endfor %}
					</div>
				</div>
				<div class="relative">
					<h2 class="text-2xl font-semibold text-navyBlue-800 mb-3">Latest Courses</h2>
					<div class="space-y-4 flex flex-col gap-3">
						{% set upcomingEvents = [ { title: "Lorem ipsum dolor sit amet, consectetur adipiscing elit. ",
              date: "15/03/2024", location: "Hội trường A", time: "08:30" }, {
              title: "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.", date: "20/03/2024", location:
