<!-- Menu Grid -->
<nav class="w-full col-span-2 grid grid-cols-2 sm:grid-cols-4 gap-3 sm:gap-4 my-5 lg:my-8"
  aria-label="Quick navigation">
  {% set menus = [
  {
  name: 'Tin tức và Sự kiện',
  url: '/news',
  img: 'assets/images/icons/news.png',
  alt: 'Biểu tượng tin tức và sự kiện'
  },
  {
  name: 'Thông báo',
  url: '/news',
  img: 'assets/images/icons/notify.png',
  alt: 'Biểu tượng thông báo'
  },
  {
  name: 'Học bổng',
  url: '/news',
  img: 'assets/images/icons/scholarship.png',
  alt: 'Biểu tượng học bổng'
  },
  {
  name: 'Tuyển sinh',
  url: '/news',
  img: 'assets/images/icons/admission.png',
  alt: 'Biểu tượng tuyển sinh'
  }
  ] %}

  {% for item in menus %}
  <div
    class="w-full aspect-[280/200] bg-stroke1 rounded-xl group transition-all duration-300 hover:bg-navyBlue-50 hover:scale-105 hover:shadow-lg">
    <a href="{{ item.url }}" class="flex flex-col items-center justify-center size-full gap-3 sm:gap-5 p-2 sm:p-4"
      aria-label="{{ item.name }}">
      <figure
        class="size-[40px] sm:size-[40px] lg:size-[100px] group-hover:scale-110 transition-transform duration-300">
        <img src="{{ item.img }}" alt="{{ item.alt }}" width="100" height="100" class="size-full object-cover"
          loading="lazy" />
      </figure>
      <h2
        class="text-base sm:text-xl text-center font-semibold text-gray-800 group-hover:text-navyBlue-800 transition-colors duration-300">
        {{ item.name }}
      </h2>
    </a>
  </div>
  {% endfor %}
</nav>
