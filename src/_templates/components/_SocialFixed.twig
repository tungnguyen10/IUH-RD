<button id="scrollToTop" class="size-12 fixed bottom-4 right-2 md:bottom-2 md:right-6 z-[0] bg-navyBlue-600 hover:bg-navyBlue-700 text-white rounded-full shadow-lg transition-all duration-300 flex items-center justify-center opacity-0 invisible" aria-label="Scroll to top">
	<svg class="size-5 md:size-6" viewbox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
		<path d="M12 4L4 12M12 4L20 12M12 4V20" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
	</svg>
</button>
<div
	class="fixed bottom-4 left-4 md:bottom-8 md:left-8 z-0">
	<!-- Social Icons Container -->
	<div
		class="relative">
		<!-- Question Mark Button -->
		<button id="socialToggle" class="w-12 h-12 bg-navyBlue-600 hover:bg-navyBlue-700 text-white rounded-full shadow-lg transition-all duration-300 flex items-center justify-center pulse-animation relative" aria-label="Show Social Links">
			<svg class="w-6 h-6 relative z-[3]" viewbox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
				<path d="M12 22C17.5228 22 22 17.5228 22 12C22 6.47715 17.5228 2 12 2C6.47715 2 2 6.47715 2 12C2 17.5228 6.47715 22 12 22Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
				<path d="M12 17H12.01" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
				<path d="M9.09 9C9.3251 8.33167 9.78915 7.76811 10.4 7.40913C11.0108 7.05016 11.7289 6.91894 12.4272 7.03871C13.1255 7.15849 13.7588 7.52152 14.2151 8.06353C14.6713 8.60553 14.9211 9.29152 14.92 10C14.92 12 11.92 13 11.92 13" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
			</svg>
		</button>

		<!-- Social Icons List -->
		<div id="socialList" class="absolute bottom-full left-0 mb-4 space-y-3 opacity-0 invisible transition-all duration-300">
			{% set socials = [
				{
					name: 'Facebook',
					icon: '<svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg"><path d="M9.19795 21.5H13.198V13.4901H16.8021L17.198 9.50977H13.198V7.5C13.198 6.94772 13.6457 6.5 14.198 6.5H17.198V2.5H14.198C11.4365 2.5 9.19795 4.73858 9.19795 7.5V9.50977H7.19795L6.80206 13.4901H9.19795V21.5Z"/></svg>',
					url: 'https://facebook.com',
					bg: 'bg-[#1877F2]'
				},
				{
					name: 'Youtube',
					icon: '<svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg"><path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/></svg>',
					url: 'https://youtube.com',
					bg: 'bg-[#FF0000]'
				},
				{
					name: 'Instagram',
					icon: '<svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg"><path d="M12 2c2.717 0 3.056.01 4.122.06 1.065.05 1.79.217 2.428.465.66.254 1.216.598 1.772 1.153a4.908 4.908 0 0 1 1.153 1.772c.247.637.415 1.363.465 2.428.047 1.066.06 1.405.06 4.122 0 2.717-.01 3.056-.06 4.122-.05 1.065-.218 1.79-.465 2.428a4.883 4.883 0 0 1-1.153 1.772 4.915 4.915 0 0 1-1.772 1.153c-.637.247-1.363.415-2.428.465-1.066.047-1.405.06-4.122.06-2.717 0-3.056-.01-4.122-.06-1.065-.05-1.79-.218-2.428-.465a4.89 4.89 0 0 1-1.772-1.153 4.904 4.904 0 0 1-1.153-1.772c-.248-.637-.415-1.363-.465-2.428C2.013 15.056 2 14.717 2 12c0-2.717.01-3.056.06-4.122.05-1.066.217-1.79.465-2.428a4.88 4.88 0 0 1 1.153-1.772A4.897 4.897 0 0 1 5.45 2.525c.638-.248 1.362-.415 2.428-.465C8.944 2.013 9.283 2 12 2zm0 5a5 5 0 1 0 0 10 5 5 0 0 0 0-10zm6.5-.25a1.25 1.25 0 1 0-2.5 0 1.25 1.25 0 0 0 2.5 0zM12 9a3 3 0 1 1 0 6 3 3 0 0 1 0-6z"/></svg>',
					url: 'https://instagram.com',
					bg: 'bg-[#fa7e1e]'
				},
				{
					name: 'Phone',
					icon: '<svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg"><path d="M20.01 15.38C18.78 15.38 17.59 15.18 16.48 14.82C16.13 14.7 15.74 14.79 15.47 15.06L13.9 17.03C11.07 15.68 8.42 13.13 7.01 10.2L8.96 8.54C9.23 8.26 9.31 7.87 9.2 7.52C8.83 6.41 8.64 5.22 8.64 3.99C8.64 3.45 8.19 3 7.65 3H4.19C3.65 3 3 3.24 3 3.99C3 13.28 10.73 21 20.01 21C20.72 21 21 20.37 21 19.82V16.37C21 15.83 20.55 15.38 20.01 15.38Z"/></svg>',
					url: 'tel:+84123456789',
					bg: 'bg-[#25D366]'
				}
			] %}

			{% for social in socials %}
				<div class="group relative">
					<a href="{{ social.url }}" target="_blank" rel="noopener noreferrer" class="social-icon w-12 h-12 flex items-center justify-center {{ social.bg }} text-white rounded-full shadow-lg transition-all duration-300 hover:scale-110" data-index="{{ loop.index0 }}">
						{{ social.icon | raw }}
					</a>
					<!-- Enhanced Tooltip -->
					<div class="absolute left-full ml-3 top-1/2 -translate-y-1/2 pointer-events-none">
						<div class="relative {{social.bg}} px-3 py-1.5 rounded-lg shadow-lg border border-gray-100
																                        transform -translate-x-2 opacity-0 invisible group-hover:opacity-100 group-hover:visible group-hover:translate-x-0 transition-all duration-300">
							<span class="block text-sm font-medium text-white whitespace-nowrap">{{ social.name }}</span>
							<!-- Enhanced Arrow -->
							<div class="absolute left-0 top-1/2 -translate-x-[6px] -translate-y-1/2 transform rotate-45 w-3 h-3 {{social.bg}} border-l border-b border-gray-100"></div>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
</div>
