{% extends "./_templates/layout.twig" %} {# If rename this file, rename in gulp
'html' task as well #} {% set breadcrumbs = [ { title: 'Liên hệ', url:
'/contact' } ] %} {% set pageClass = 'iuhContact' %} {% block page %}
<div class="w-full py-4 pb-6 lg:pt-0 lg:pb-16 relative">
  <div class="w-full max-w-[1200px] px-4 mx-auto">
    {% include "./_components/page-header.twig" with {
      title: 'THÔNG TIN LIÊN HỆ'
    } %}
    
    <div class="grid lg:grid-cols-2 gap-8">
      <!-- Contact Form -->
      <div class="w-full">
        <div
          class="bg-white rounded-xl border border-gray-200 shadow-md p-6 sm:p-8"
        >
          <h2 class="text-xl sm:text-2xl font-semibold text-navyBlue-800 mb-6">
            Gửi thông tin liên hệ
          </h2>
          <form class="space-y-6">
            <!-- Tiêu đề -->
            <div class="space-y-2">
              <label
                for="title"
                class="block text-sm font-medium text-gray-700"
              >
                Tiêu đề
                <span class="text-red-500">*</span>
              </label>
              <input
                type="text"
                id="title"
                name="title"
                required
                class="w-full px-4 py-2.5 rounded-lg border border-gray-300 focus:ring-2 focus:ring-navyBlue-300 focus:border-navyBlue-500 transition-all duration-300 outline-none"
                placeholder="Nhập tiêu đề"
              />
            </div>
            <!-- Họ tên -->
            <div class="space-y-2">
              <label for="name" class="block text-sm font-medium text-gray-700">
                Họ tên
                <span class="text-red-500">*</span>
              </label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-4 py-2.5 rounded-lg border border-gray-300 focus:ring-2 focus:ring-navyBlue-300 focus:border-navyBlue-500 transition-all duration-300 outline-none"
                placeholder="Nhập họ tên"
              />
            </div>

            <!-- Email -->
            <div class="space-y-2">
              <label
                for="email"
                class="block text-sm font-medium text-gray-700"
              >
                Email
                <span class="text-red-500">*</span>
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-2.5 rounded-lg border border-gray-300 focus:ring-2 focus:ring-navyBlue-300 focus:border-navyBlue-500 transition-all duration-300 outline-none"
                placeholder="Nhập email"
              />
            </div>

            <!-- Thông tin liên hệ -->
            <div class="space-y-2">
              <label
                for="contact"
                class="block text-sm font-medium text-gray-700"
              >
                Thông tin liên hệ
                <span class="text-red-500">*</span>
              </label>
              <input
                type="text"
                id="contact"
                name="contact"
                required
                class="w-full px-4 py-2.5 rounded-lg border border-gray-300 focus:ring-2 focus:ring-navyBlue-300 focus:border-navyBlue-500 transition-all duration-300 outline-none"
                placeholder="Nhập số điện thoại hoặc thông tin liên hệ khác"
              />
            </div>
            <!-- Nội dung -->
            <div class="space-y-2">
              <label
                for="content"
                class="block text-sm font-medium text-gray-700"
              >
                Nội dung
                <span class="text-red-500">*</span>
              </label>
              <textarea
                id="content"
                name="content"
                rows="4"
                required
                class="w-full px-4 py-2.5 rounded-lg border border-gray-300 focus:ring-2 focus:ring-navyBlue-300 focus:border-navyBlue-500 transition-all duration-300 outline-none resize-none"
                placeholder="Nhập nội dung"
              ></textarea>
            </div>

            <!-- Submit Button -->
            <div class="iuh-btn w-full max-w-[200px]">
              <button type="submit" class="w-full">
                Gửi thông tin
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="size-5"
                  viewbox="0 0 24 24"
                  fill="none"
                >
                  <path
                    d="M10.075 12L5.5 7.4L6.9 6L12.9 12L6.9 18L5.5 16.6L10.075 12ZM16.675 12L12.1 7.4L13.5 6L19.5 12L13.5 18L12.1 16.6L16.675 12Z"
                    fill="currentColor"
                  />
                </svg>
              </button>
            </div>
          </form>
        </div>
      </div>

      <!-- Contact Information -->
      <div class="w-full">
        <div
          class="bg-white rounded-xl border border-gray-200 shadow-md p-6 sm:p-8 h-full"
        >
          <h2 class="text-xl sm:text-2xl font-semibold text-navyBlue-800 mb-6">
            Thông tin liên hệ
          </h2>
          <div class="space-y-6">
            <div class="flex items-start gap-4">
              <div
                class="shrink-0 size-10 rounded-full bg-navyBlue-100 flex items-center justify-center"
              >
                <svg
                  class="size-5 text-navyBlue-600"
                  fill="none"
                  stroke="currentColor"
                  viewbox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                  />
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
                  />
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-medium text-gray-900">Địa chỉ</h3>
                <p class="mt-1 text-gray-600">
                  12 Nguyễn Văn Bảo, P.4, Q. Gò Vấp, TP.HCM
                </p>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div
                class="shrink-0 size-10 rounded-full bg-navyBlue-100 flex items-center justify-center"
              >
                <svg
                  class="size-5 text-navyBlue-600"
                  fill="none"
                  stroke="currentColor"
                  viewbox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                  />
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-medium text-gray-900">Điện thoại</h3>
                <p class="mt-1 text-gray-600">(028) 38940390</p>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div
                class="shrink-0 size-10 rounded-full bg-navyBlue-100 flex items-center justify-center"
              >
                <svg
                  class="size-5 text-navyBlue-600"
                  fill="none"
                  stroke="currentColor"
                  viewbox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                  />
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-medium text-gray-900">Email</h3>
                <p class="mt-1 text-gray-600">dhcn@iuh.edu.vn</p>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div
                class="shrink-0 size-10 rounded-full bg-navyBlue-100 flex items-center justify-center"
              >
                <svg
                  class="size-5 text-navyBlue-600"
                  fill="none"
                  stroke="currentColor"
                  viewbox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                  />
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-medium text-gray-900">Website</h3>
                <a
                  href="https://www.iuh.edu.vn"
                  class="mt-1 text-navyBlue-600 hover:underline"
                  >www.iuh.edu.vn</a
                >
              </div>
            </div>
            <div
              class="w-full aspect-video row-end-auto row-span-2 rounded-lg overflow-hidden bg-white shadow-lg"
            >
              <iframe
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3918.8576313088647!2d106.68492447584146!3d10.822205289329432!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3174deb3ef536f31%3A0x8b7bb8b7c956157b!2sIndustrial%20University%20of%20Ho%20Chi%20Minh%20City!5e0!3m2!1sen!2s!4v1737530508425!5m2!1sen!2s"
                class="size-full"
                style="border: 0"
                allowfullscreen=""
                loading="lazy"
                referrerpolicy="no-referrer-when-downgrade"
              ></iframe>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
