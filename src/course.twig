{% extends "./_templates/layout.twig" %}
{# If rename this file, rename in gulp
'html' task as well #}
{% set breadcrumbs = [ { title: 'Khoá học', url:
'/course' } ] %}
{% set pageClass = 'iuhCourse' %}
{% block page %}
	<div class="w-full py-4 pb-6 lg:pt-0 lg:pb-16 relative">
		<div
			class="w-full max-w-[1200px] px-4 mx-auto">
			<!-- Section 1: Introduction to Online Courses -->
			<div class="flex flex-col lg:flex-row items-center gap-10 py-10">
				<div class="flex-1">
					{% include './_templates/components/common/Title.twig' with {
      class: 'mb-8 !text-left',
      text: 'Đánh giá từ Học viên'
    } %}

					<p class="text-lg text-gray-700 mb-4">
						Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.
																																																          Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.
					</p>
					<p class="text-lg text-gray-700 mb-4">
						Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur.
																																																          Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum.
					</p>
				</div>
				<div
					class="flex-1 flex justify-center">
					{# You can use a relevant image here, like an image for online learning #}
					<img src="assets/images/main-pc.png" alt="Online Learning Intro" class="rounded-2xl shadow-lg max-w-sm w-full object-cover"/>
				</div>
			</div>

			<hr
			class="my-10 border-gray-200">

			<!-- Section 2: Course Listings (Responsive Grid) -->
			{% include './_templates/components/common/Title.twig' with {
      class: 'mb-8',
      text: 'Đánh giá từ Học viên'
    } %}

			<div
				class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
				{# Loop through your course items here #}
				{% for i in 1..9 %}
					{# Example: 9 placeholder items #}
					<div class="bg-white rounded-xl border border-gray-100 shadow-sm overflow-hidden flex flex-col">
						<img src="assets/images/project.jpg" alt="Course Placeholder" class="w-full h-48 object-cover">
						<div class="p-4 flex-1 flex flex-col">
							<h3 class="text-xl font-semibold text-gray-800 mb-2">Khóa học
								{{ i }}: Lorem Ipsum</h3>
							<p class="text-black text-base mb-4 flex-1">
								Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.
							</p>
							{# Optional: Add a button or link #}
							<a href="#" class="text-navyBlue-700 hover:underline font-semibold mt-auto">Xem chi tiết</a>
						</div>
					</div>
				{% endfor %}
			</div>

			<hr
			class="my-10 border-gray-200">

			<!-- Section 3: Course Reviews/Testimonials -->
			{% include './_templates/components/common/Title.twig' with {
      class: 'mb-8',
      text: 'Đánh giá từ Học viên'
    } %}
			<div class="swiper swiper_courseReview !pb-12" data-module="CourseReview">
				<div class="swiper-wrapper">
					{% for i in 1..3 %}
						<div class="swiper-slide">
							<div
								class="bg-white rounded-2xl p-6 border border-gray-100 flex flex-col items-center text-center">
								<!-- Avatar with abstract background -->
								<div
									class="relative mb-1 w-36 h-36 flex items-center justify-center">
									<!-- Blob 1 -->
									<span class="absolute w-4/5 h-4/5 bg-navyBlue-300 rounded-full -left-2 top-0 opacity-80 "></span>
									<!-- Blob 2 -->
									<span class="absolute w-2/3 h-2/3 bg-green-300 rounded-full -right-2 top-5 opacity-70 "></span>
									<!-- Blob 3 -->
									<span class="absolute w-2/5 h-2/5 bg-navyBlue-100 rounded-full left-9 -bottom-1 opacity-60 "></span>
									<!-- Avatar -->
									<img src="assets/images/program-image.png" alt="John Doe" class="w-4/5 h-4/5 rounded-full object-cover border-4 border-navyBlue-300 shadow-2xl z-10"/>
								</div>

								<!-- Name and stars -->
								<div class="mb-2">
									<span class="block font-bold text-lg text-navyBlue-800">Victoria Roach</span>
									<div class="flex justify-center gap-1 mt-1">
										<i class="fa-solid fa-star text-yellowLogo text-lg"></i>
										<i class="fa-solid fa-star text-yellowLogo text-lg"></i>
										<i class="fa-solid fa-star text-yellowLogo text-lg"></i>
										<i class="fa-solid fa-star text-yellowLogo text-lg"></i>
										<i class="fa-solid fa-star text-yellowLogo text-lg"></i>
									</div>
								</div>
								<!-- Review text -->
								<p class="text-black2 text-base mt-2">
									One of the best support I ever seen. Highly recommend the theme for its design, functions, flexibility and support...
								</p>
							</div>
						</div>
					{% endfor %}
				</div>
				<div class="swiper-pagination"></div>
			</div>

		</div>
	</div>
{% endblock %}
