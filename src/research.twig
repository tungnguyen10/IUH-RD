{% extends "./_templates/layout.twig" %} {# If rename this file, rename in gulp
'html' task as well #} {% set breadcrumbs = [ { title: 'Nghiên cứu khoa học',
url: '/research' } ] %} {% set pageClass = 'iuhResearch' %} {% block page %}
<div
  class="w-full py-4 pb-6 lg:pt-0 lg:pb-16 relative"
  data-module="ChildResearch"
>
  <div class="w-full max-w-[1200px] px-4 mx-auto">
    {% include "./_components/page-header.twig" with { title: 'NGHIÊN CỨU KHOA
    HỌC' } %}
    <div class="w-full flex flex-col gap-4 sm:gap-8">
      <!-- Quick Links Grid -->
      <div
        class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4"
      >
        {% set list = [ { title: 'Thông tin về Nghiên cứu khoa học', url: '#',
        img: 'assets/images/icons/chemistry.png' }, { title: 'Văn bản biểu mẫu',
        url: '#', img: 'assets/images/icons/exam.png' }, { title: 'Tạp chí Khoa
        học & Công nghệ', url: '#', img:
        'assets/images/icons/scientific-literature.png' }, { title: 'Công trình
        nghiên cứu', url: '#', img: 'assets/images/icons/project.png' } ] %} {%
        for item in list %}
        <a
          href="{{ item.url }}"
          class="flex w-full items-center gap-2 rounded-lg p-2 border border-gray-100 bg-gray-50/80 px-4 py-2 transition-all duration-300 hover:bg-navyBlue-50 hover:border-navyBlue-50 hover:scale-105 shadow-md"
        >
          <span class="text-sm font-medium flex-1">{{ item.title }}</span>
          <span class="size-10 shrink-0">
            <img
              src="{{ item.img }}"
              alt="{{ item.title }}"
              class="size-full object-cover"
            />
          </span>
        </a>
        {% endfor %}
      </div>
      <!-- Overview Section -->
      <div
        class="bg-white rounded-xl shadow-lg border border-gray-100 p-4 sm:p-6 lg:p-8"
      >
        <div
          class="grid grid-cols-1 lg:grid-cols-2 gap-6 lg:gap-8 items-center"
        >
          <!-- Content -->
          <div class="space-y-4">
            <h2
              class="text-lg sm:text-xl lg:text-2xl font-semibold text-navyBlue-800"
            >
              Tổng quan
            </h2>
            <p class="text-sm sm:text-base text-gray-700 leading-relaxed">
              Nghiên cứu khoa học tại IUH là một trong những nhiệm vụ trọng tâm,
              góp phần nâng cao chất lượng đào tạo và phát triển công nghệ.
              Chúng tôi tập trung vào việc nghiên cứu các vấn đề thực tiễn, đáp
              ứng nhu cầu của xã hội và doanh nghiệp.
            </p>

            <!-- Stats Grid -->
            <div class="grid grid-cols-2 sm:grid-cols-3 gap-4 mt-6">
              <div class="bg-gray-50 rounded-lg p-4 text-center">
                <span class="block text-2xl font-bold text-navyBlue-600"
                  >500+</span
                >
                <span class="text-sm text-gray-600">Đề tài nghiên cứu</span>
              </div>
              <div class="bg-gray-50 rounded-lg p-4 text-center">
                <span class="block text-2xl font-bold text-navyBlue-600"
                  >200+</span
                >
                <span class="text-sm text-gray-600">Giảng viên tham gia</span>
              </div>
              <div
                class="bg-gray-50 rounded-lg p-4 text-center sm:col-span-1 col-span-2"
              >
                <span class="block text-2xl font-bold text-navyBlue-600"
                  >50+</span
                >
                <span class="text-sm text-gray-600">Đối tác hợp tác</span>
              </div>
            </div>
          </div>

          <!-- Image -->
          <div class="relative">
            <div class="aspect-w-16 aspect-h-12 rounded-xl overflow-hidden">
              <img
                src="assets/images/biotech1.jpg"
                alt="Nghiên cứu khoa học tại IUH"
                class="w-full h-full object-cover"
              />
            </div>
            <!-- Decorative Elements -->
            <div
              class="absolute -bottom-4 -right-4 w-24 h-24 bg-navyBlue-50 rounded-full -z-10"
            ></div>
            <div
              class="absolute -top-4 -left-4 w-16 h-16 bg-navyBlue-100 rounded-full -z-10"
            ></div>

            <!-- Image Caption -->
            <div
              class="absolute bottom-4 left-4 right-4 bg-white/90 backdrop-blur-sm rounded-lg p-3 shadow-lg"
            >
              <p class="text-sm text-gray-700">
                Phòng thí nghiệm hiện đại với các trang thiết bị nghiên cứu tiên
                tiến
              </p>
            </div>
          </div>
        </div>

        <!-- Key Points -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 mt-8">
          <div class="flex items-start gap-3">
            <div
              class="shrink-0 w-10 h-10 rounded-full bg-navyBlue-100 flex items-center justify-center"
            >
              <svg
                class="w-5 h-5 text-navyBlue-600"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"
                />
              </svg>
            </div>
            <div>
              <h3 class="font-medium text-navyBlue-800">Đổi mới sáng tạo</h3>
              <p class="text-sm text-gray-600">
                Thúc đẩy nghiên cứu đột phá và sáng tạo
              </p>
            </div>
          </div>

          <div class="flex items-start gap-3">
            <div
              class="shrink-0 w-10 h-10 rounded-full bg-navyBlue-100 flex items-center justify-center"
            >
              <svg
                class="w-5 h-5 text-navyBlue-600"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                />
              </svg>
            </div>
            <div>
              <h3 class="font-medium text-navyBlue-800">Hợp tác quốc tế</h3>
              <p class="text-sm text-gray-600">
                Mở rộng quan hệ hợp tác nghiên cứu
              </p>
            </div>
          </div>

          <div class="flex items-start gap-3">
            <div
              class="shrink-0 w-10 h-10 rounded-full bg-navyBlue-100 flex items-center justify-center"
            >
              <svg
                class="w-5 h-5 text-navyBlue-600"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"
                />
              </svg>
            </div>
            <div>
              <h3 class="font-medium text-navyBlue-800">Ứng dụng thực tiễn</h3>
              <p class="text-sm text-gray-600">
                Kết nối nghiên cứu với nhu cầu xã hội
              </p>
            </div>
          </div>
        </div>
      </div>

      <!-- Research Objectives -->
      <div
        id="research-objectives"
        class="bg-white rounded-xl shadow-lg border border-gray-100 p-4 sm:p-6 lg:p-8"
      >
        <h2
          class="text-lg sm:text-xl lg:text-2xl font-semibold text-navyBlue-800 mb-3 lg:mb-4"
        >
          Mục tiêu nghiên cứu
        </h2>

        <!-- Main Objective -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 lg:gap-8 mb-8">
          <p
            class="text-sm sm:text-base text-gray-700 leading-relaxed order-2 lg:order-1"
          >
            Bên cạnh là một hoạt động học thuật, việc nghiên cứu khoa học tại
            IUH còn đặt mục tiêu mang lại những giá trị thiết thực, thu hút giới
            trí thức quốc tế đến hợp tác, từ đó hiện thực hóa tầm nhìn trở thành
            một trong những đại học trẻ được ngưỡng mộ nhất châu Á.
          </p>
          <div
            class="relative h-48 lg:h-full w-full rounded-xl overflow-hidden aspect-video order-1 lg:order-2"
          >
            <img
              src="assets/images/biotech2.png"
              alt="Nghiên cứu khoa học tại IUH"
              class="w-full h-full object-cover"
            />
          </div>
        </div>

        <!-- Detailed Objectives Grid -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
          <!-- Research Quality -->
          <div
            class="bg-gray-50 rounded-xl overflow-hidden hover:shadow-lg transition-all duration-300"
          >
            <div class="relative h-48">
              <img
                src="assets/images/biotech2.png"
                alt="Nâng cao chất lượng nghiên cứu"
                class="w-full h-full object-cover"
              />
              <div
                class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"
              ></div>
            </div>
            <div class="p-4 sm:p-6">
              <div class="flex items-center gap-3 mb-4">
                <div
                  class="w-10 h-10 rounded-full bg-navyBlue-100 flex items-center justify-center shrink-0"
                >
                  <svg
                    class="w-5 h-5 text-navyBlue-600"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"
                    />
                  </svg>
                </div>
                <h3 class="text-lg font-semibold text-navyBlue-800">
                  Nâng cao chất lượng nghiên cứu
                </h3>
              </div>
              <ul class="space-y-2 text-gray-700">
                <li class="flex items-center gap-2">
                  <span
                    class="w-1.5 h-1.5 rounded-full bg-navyBlue-600 shrink-0"
                  ></span>
                  Phát triển các công nghệ mới và ứng dụng vào thực tiễn
                </li>
                <li class="flex items-center gap-2">
                  <span
                    class="w-1.5 h-1.5 rounded-full bg-navyBlue-600 shrink-0"
                  ></span>
                  Nâng cao năng lực nghiên cứu cho giảng viên và sinh viên
                </li>
              </ul>
            </div>
          </div>

          <!-- Practical Focus -->
          <div
            class="bg-gray-50 rounded-xl overflow-hidden hover:shadow-lg transition-all duration-300"
          >
            <div class="relative h-48">
              <img
                src="assets/images/biotech2.png"
                alt="Chú trọng tính thực tiễn"
                class="w-full h-full object-cover"
              />
              <div
                class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"
              ></div>
            </div>
            <div class="p-4 sm:p-6">
              <div class="flex items-center gap-3 mb-4">
                <div
                  class="w-10 h-10 rounded-full bg-navyBlue-100 flex items-center justify-center shrink-0"
                >
                  <svg
                    class="w-5 h-5 text-navyBlue-600"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"
                    />
                  </svg>
                </div>
                <h3 class="text-lg font-semibold text-navyBlue-800">
                  Chú trọng tính thực tiễn
                </h3>
              </div>
              <ul class="space-y-2 text-gray-700">
                <li class="flex items-center gap-2">
                  <span
                    class="w-1.5 h-1.5 rounded-full bg-navyBlue-600 shrink-0"
                  ></span>
                  Đóng góp vào sự phát triển kinh tế - xã hội của đất nước
                </li>
                <li class="flex items-center gap-2">
                  <span
                    class="w-1.5 h-1.5 rounded-full bg-navyBlue-600 shrink-0"
                  ></span>
                  Tạo ra các giải pháp thiết thực cho doanh nghiệp và cộng đồng
                </li>
              </ul>
            </div>
          </div>

          <!-- Internationalization -->
          <div
            class="bg-gray-50 rounded-xl overflow-hidden hover:shadow-lg transition-all duration-300"
          >
            <div class="relative h-48">
              <img
                src="assets/images/biotech2.png"
                alt="Đa dạng và quốc tế hóa"
                class="w-full h-full object-cover"
              />
              <div
                class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"
              ></div>
            </div>
            <div class="p-4 sm:p-6">
              <div class="flex items-center gap-3 mb-4">
                <div
                  class="w-10 h-10 rounded-full bg-navyBlue-100 flex items-center justify-center shrink-0"
                >
                  <svg
                    class="w-5 h-5 text-navyBlue-600"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                    />
                  </svg>
                </div>
                <h3 class="text-lg font-semibold text-navyBlue-800">
                  Đa dạng và quốc tế hóa
                </h3>
              </div>
              <ul class="space-y-2 text-gray-700">
                <li class="flex items-center gap-2">
                  <span
                    class="w-1.5 h-1.5 rounded-full bg-navyBlue-600 shrink-0"
                  ></span>
                  Tăng cường hợp tác quốc tế trong nghiên cứu khoa học
                </li>
                <li class="flex items-center gap-2">
                  <span
                    class="w-1.5 h-1.5 rounded-full bg-navyBlue-600 shrink-0"
                  ></span>
                  Thu hút các nhà nghiên cứu quốc tế đến hợp tác
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>

      <!-- Research Fields -->
      <div
        id="research-fields"
        class="bg-white rounded-xl shadow-lg border border-gray-100 p-4 sm:p-6 lg:p-8"
      >
        <!-- Header with Hero Image - Responsive Heights -->
        <div class="relative rounded-xl overflow-hidden mb-6 sm:mb-8 lg:mb-10">
          <div class="h-[200px] sm:h-[300px] lg:h-[400px]">
            <img
              src="assets/images/biotech2.png"
              alt="Nghiên cứu khoa học tại IUH"
              class="w-full h-full object-cover"
            />
          </div>
          <div
            class="absolute inset-0 bg-gradient-to-r from-black/70 via-black/50 to-transparent"
          >
            <div
              class="h-full flex flex-col justify-center p-4 sm:p-6 lg:p-8 max-w-2xl"
            >
              <h2
                class="text-lg sm:text-xl lg:text-3xl font-semibold text-white mb-2 sm:mb-3 lg:mb-4"
              >
                Lĩnh vực nghiên cứu trọng tâm
              </h2>
              <p
                class="text-xs sm:text-sm lg:text-base text-gray-200 leading-relaxed line-clamp-3 sm:line-clamp-none"
              >
                Tại IUH, các giảng viên cùng trí thức từ nhiều lĩnh vực khác
                nhau cùng tham gia nghiên cứu khoa học để mang lại lợi ích cho
                cộng đồng và thúc đẩy xã hội phát triển.
              </p>
            </div>
          </div>
        </div>

        <!-- Research Fields Grid -->
        <div class="w-full">
          <div class="swiper_research swiper !pb-12 sm:!pb-14 lg:!pb-16">
            <div class="swiper-wrapper">
              {% for i in 1..6 %}
              <!-- Engineering & Technology -->
              <div class="swiper-slide px-1 sm:px-2">
                <div
                  class="bg-gray-50 rounded-xl overflow-hidden hover:shadow-lg transition-all duration-300 group h-full"
                >
                  <div class="relative h-36 sm:h-40 lg:h-48">
                    <img
                      src="assets/images/biotech2.png"
                      alt="Công nghệ và Kỹ thuật"
                      class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500"
                    />
                    <div
                      class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/50 to-transparent"
                    ></div>
                    <div class="absolute bottom-0 left-0 right-0 p-3 sm:p-4">
                      <div class="flex items-center gap-2 sm:gap-3">
                        <div
                          class="w-8 h-8 sm:w-10 sm:h-10 rounded-full bg-white/20 backdrop-blur-sm flex items-center justify-center shrink-0"
                        >
                          <svg
                            class="w-4 h-4 sm:w-5 sm:h-5 text-white"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                          >
                            <path
                              stroke-linecap="round"
                              stroke-linejoin="round"
                              stroke-width="2"
                              d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"
                            />
                          </svg>
                        </div>
                        <h3
                          class="text-sm sm:text-base lg:text-lg font-semibold text-white"
                        >
                          Công nghệ và Kỹ thuật
                        </h3>
                      </div>
                    </div>
                  </div>
                  <div class="p-3 sm:p-4 lg:p-6">
                    <ul class="space-y-2 sm:space-y-3">
                      {% for dept in ['Khoa Công nghệ Thông tin', 'Khoa Điện -
                      Điện tử', 'Khoa Cơ khí', 'Khoa Công nghệ Động lực'] %}
                      <li class="flex items-center gap-2 sm:gap-3 group/item">
                        <div
                          class="w-6 h-6 sm:w-8 sm:h-8 rounded-lg bg-navyBlue-100 flex items-center justify-center shrink-0 group-hover/item:bg-navyBlue-200 transition-colors"
                        >
                          <span
                            class="w-1 h-1 sm:w-1.5 sm:h-1.5 rounded-full bg-navyBlue-600"
                          ></span>
                        </div>
                        <span
                          class="text-xs sm:text-sm lg:text-base text-gray-700 group-hover/item:text-navyBlue-800 transition-colors"
                          >{{ dept }}</span
                        >
                      </li>
                      {% endfor %}
                    </ul>
                  </div>
                </div>
              </div>
              {% endfor %}
            </div>

            <!-- Responsive Navigation -->
            <div class="swiper-pagination"></div>
          </div>
        </div>
      </div>

      <!-- Achievements -->
      <div
        class="bg-white rounded-xl shadow-lg border border-gray-100 p-4 sm:p-6 lg:p-8"
      >
        <h2
          class="text-lg sm:text-xl lg:text-2xl font-semibold text-navyBlue-800 mb-3 lg:mb-4"
        >
          Thành tựu
        </h2>
        <div class="flex flex-col gap-4 my-5 sm:my-8">
          <div class="flex items-start sm:items-center gap-3 sm:gap-4">
            <div
              class="shrink-0 w-8 h-8 sm:w-12 sm:h-12 rounded-full bg-navyBlue-100 flex items-center justify-center"
            >
              <svg
                class="w-6 h-6 text-navyBlue-600"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                />
              </svg>
            </div>
            <div>
              <h3 class="text-base sm:text-lg font-medium text-navyBlue-600">
